{
  "name": "vibe-test-monorepo",
  "version": "1.0.0",
  "description": "모노레포 구조의 프론트엔드(React) + 백엔드(Spring Boot) 프로젝트",
  "main": "index.js",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && ./gradlew build",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && ./gradlew bootRun",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && ./gradlew build",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && ./gradlew test",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "install:all": "npm run install:frontend && npm run install:backend"
  },
  "keywords": [
    "monorepo",
    "react",
    "spring-boot",
    "frontend",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}